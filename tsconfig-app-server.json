{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "./dist-app-renderer",
  },
  "include": [
    "./app-renderer/server.ts",
    "./app-renderer/common.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "dist-app-renderer",
    "./app-renderer/server.config.js"
  ]
}